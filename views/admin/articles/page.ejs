<%- include('../../partials/header.ejs'); -%>
<%- include('../../partials/homenavbar.ejs'); -%>
<body>
   <div class="container">
    <hr>
    
    <% result.articles.rows.forEach(result=>{ %>

        <div class="card my-4">
            <div class="card-header">
                <h2><%= result.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= result.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>

    <%})%>
    
    
<div class="row">
    <div class="col col-12">
        <% if(result.page > 2){%>
        <a style="float: left;" href="/articles/page/<%= result.page -1 %>">< << prev></a>
        <%}else if(result.page == 2){%>
        <a style="float: left;" href="/>">< << prev></a>
        <% } %>
        <% if(result.next){%>
        <a style="float: right;" href="/articles/page/<%= result.page +1 %>">Next >>></a>
        <%}%>
    </div>
   </div>
</body>
